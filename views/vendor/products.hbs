<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                {{>adminmetrics}}
                <h1 class="page-header">
                    {{adminPageTitle}}
                </h1>

                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>
                        <a href="/admin">Dashboard</a>
                    </li>
                    <li class="active">
                        <i class="fa fa-bar-chart-o"></i> {{adminPageTitle}}
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
                        <div id="success" class="alert alert-success" {{#if noMessage}}hidden{{/if}}>
                            {{successMsg}}
                        </div>
                        <div id="danger" class="alert alert-danger" {{#if noErrorMsg}}hidden{{/if}}>
                            {{errorMsg}}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="row">
                        <div class="col-md-4 col-md-offset-4">
                            <div class="panel-heading">
                                <ul class="nav nav-pills">
                                    <li role="presentation" class="{{#if allProducts}} active {{/if}}">
                                        <a href="/admin/products?filter=allProducts">All Products</a>
                                    </li>
                                    <li role="presentation" class="{{#if deletedProducts}} active {{/if}}">
                                        <a href="/admin/products?filter=deletedProducts">Deleted Products</a>
                                    </li>
                                </ul>
                            </div>

                        </div>
                        <div class="panel-body">
                            <p data-placement="top" class='text-right' data-toggle="tooltip" title="Add New Product ">
                                <button class="ui right floated btn btn-success btn-lg" data-title="Add" data-toggle="modal" data-target="#add">Add Product
                                    <span class="glyphicon glyphicon-plus"></span>
                                </button>
                            </p>
                            <!-- Add Dialog -->
                            <div class="modal fade" id="add" tabindex="-1" role="dialog" aria-labelledby="add" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                            </button>
                                            <h4 class="modal-title custom_align" id="Heading">Add New Product</h4>
                                        </div>
                                        <form action='/vendor/add-product' METHOD='post' encType="multipart/form-data">
                                            <div class="modal-body">
                                                <div class="form-group">
                                                    <ul class="list-group">
                                                        <li class="list-group-item">
                                                            <label for='name'>Name</label>
                                                            <input class="form-control" name='name' type="text" placeholder="">
                                                        </li>
                                                    </ul>
                                                </div>
                                                <div class="form-group">
                                                    <ul class="list-group">
                                                        <li class="list-group-item">
                                                            <label for='title'>SKU/Code</label>
                                                            <input class="form-control" name='code' type="text" placeholder="">
                                                        </li>
                                                        <li class="list-group-item">
                                                            <label for='title'>Title</label>
                                                            <input class="form-control" name='title' type="text" placeholder="">
                                                        </li>
                                                        <li class="list-group-item">
                                                            <label for='price'>Price</label>
                                                            <input class="form-control" name='price' type="text" placeholder="">
                                                        </li>
                                                        <li class="list-group-item">
                                                            <div class="row">

                                                                <div class="col-md-5">
                                                                    <label for='Latitude'>Latitude</label>
                                                                    <input class="form-control" id="lati" name='Latitude' type="text">

                                                                </div>
                                                                <div class="col-md-5">
                                                                    <label for='Longitude'>Longitude</label>
                                                                    <input class="form-control" id="long" name='Longitude' type="text">

                                                                </div>

                                                            <div class="col-md-2">
                                                                <label for='Auto'>Auto</label>
                                                                <a type="button" onclick="getLocation()">
                                                                    <img height="32px" src="../images/Location-Auto-Locate-Current-Location-Geo-512.png"> </a>

                                                            </div>
                                                            {{!-- position.coords.longitude --}}
                                                </div>
                                                </li>
                                                <script>
                                                    var x = document.getElementById("lati");
                                                    var y = document.getElementById("long");

                                                    function getLocation() {
                                                        if (navigator.geolocation) {
                                                            navigator.geolocation.getCurrentPosition(showPosition);
                                                        } else {
                                                            x.innerHTML = "Geolocation is not supported by this browser.";
                                                        }
                                                    }

                                                    function showPosition(position) {
                                                        x.value = position.coords.latitude;
                                                        y.value = position.coords.longitude;
                                                    }
                                                </script>


                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <li class="list-group-item">
                                                                    <label for='parking '>parking ?</label>
                                                                    <div class="material-switch pull-right">
                                                                        No
                                                                        <input id="parking " name="parking " type="checkbox" />
                                                                        <label for="parking " class="label-success"></label> Yes
                                                                    </div>
                                                                </li>
                                                                <li class="list-group-item">
                                                                    <label for='Pool'>Pool?</label>
                                                                    <div class="material-switch pull-right">
                                                                        No
                                                                        <input id="Pool" name="Pool" type="checkbox" />
                                                                        <label for="Pool" class="label-success"></label> Yes
                                                                    </div>
                                                                </li>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <li class="list-group-item">
                                                                    <label for='campfire'>campfire?</label>
                                                                    <div class="material-switch pull-right">
                                                                        No
                                                                        <input id="campfire" name="campfire" type="checkbox" />
                                                                        <label for="campfire" class="label-success"></label> Yes
                                                                    </div>
                                                                </li>
                                                                <li class="list-group-item">
                                                                    <label for='Wifi'>Wifi?</label>
                                                                    <div class="material-switch pull-right">
                                                                        No
                                                                        <input id="Wifi" name="Wifi" type="checkbox" />
                                                                        <label for="Wifi" class="label-success"></label> Yes
                                                                    </div>
                                                                </li>
                                                            </div>

                                                        </div>
                                                        <li class="list-group-item">
                                                            <label for='description'>Description</label>
                                                            <textarea rows="2" class="form-control" [(ngModel)]="newProduct.description" name='description' placeholder=""></textarea>
                                                        </li>
                                                        <li class="list-group-item">
                                                            <label for='category'>Category</label>
                                                            <select class='form-control' name='category'>
                                                                {{#each allcats}}
                                                                <option value="{{this.name}}">{{this.slug}}</option>

                                                                {{/each}}
                                                            </select>
                                                        </li>
                                                        <li class="list-group-item">
                                                            <label for='Product_Group'>Product Type</label>
                                                            <select class='form-control' name='Product_Group'>
                                                                {{!--
                                                                <option value="TICKET">Ticket</option>
                                                                <option value="DONATION">Variable Amount Donation</option> --}}
                                                                <option value="APPAREL">Featured</option>
                                                                <option value="SIMPLE">Non Featured</option>
                                                            </select>
                                                        </li>
                                                    </ul>
                                                </div>
                                                <div class="form-group">
                                                    <ul class="list-group">
                                                        <li class="list-group-item">
                                                            <label for='imageFile'>Display Image</label>
                                                            <input type='file' name='imageFile' class='form-control'>
                                                        </li>
                                                    </ul>
                                                </div>
                                                <div class="form-group">
                                                    <ul class="list-group">
                                                        <li class="list-group-item">
                                                            <label for='imageFile1'>Gallery1</label>
                                                            <input type='file' name='imageFile1' class='form-control'>

                                                        </li>
                                                    </ul>
                                                </div>
                                                <div class="form-group">
                                                    <ul class="list-group">
                                                        <li class="list-group-item">
                                                            <label for='imageFile2'>Gallery2</label>
                                                            <input type='file' name='imageFile2' class='form-control'>

                                                        </li>
                                                    </ul>
                                                </div>
                                                <div class="form-group">
                                                    <ul class="list-group">
                                                        <li class="list-group-item">
                                                            <label for='imageFile3'>Gallery3</label>
                                                            <input type='file' name='imageFile3' class='form-control'>

                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" onClick="submit();" data-dismiss="modal" class="btn btn-warning btn-lg" style="width: 100%;">
                                                    <span class="glyphicon glyphicon-plus"></span> Add</button>
                                            </div>
                                        </form>
                                    </div>
                                    <!-- /.modal-content -->
                                </div>
                                <!-- /.modal-dialog -->
                            </div>
                            <div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>
                                                <h2>Product</h2>
                                            </th>
                                            <th>
                                                <h2>Image</h2>
                                            </th>
                                            <th>
                                                <h2>Name</h2>
                                            </th>
                                            <th>
                                                <h2>Title</h2>
                                            </th>
                                            <th>
                                                <h2>Description</h2>
                                            </th>
                                            <th>
                                                <h2>Category</h2>
                                            </th>
                                            <th>
                                                <h2>Price</h2>
                                            </th>
                                            <th>
                                                <h2>Edit</h2>
                                            </th>
                                            <th>
                                                <h2>Delete</h2>
                                            </th>
                                            <th>
                                                <h2>View</h2>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each products }}
                                        <tr class="odd gradeX">
                                            <input type='hidden' id='id' name='productId' value='{{ this._id }}'>
                                            <td>{{this.code}}</td>
                                            <td>
                                                <img src='{{this.imagePath}}' width=50>
                                            </td>
                                            <td>{{this.name}}</td>
                                            <td>{{this.title}}</td>
                                            <td>{{this.description}}</td>
                                            <td>{{this.category}}</td>
                                            <td class="text-right">Rs{{this.price}}</td>
                                            <td width=5%>
                                                <form action="/vendor/edit-product" method="POST">
                                                    <p data-placement="top" data-toggle="tooltip" title="Edit">
                                                        <button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit_{{this._id}}">
                                                            <span class="glyphicon glyphicon-pencil"></span>
                                                        </button>
                                                    </p>
                                                </form>

                                                <div class="modal fade" id="edit_{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                                                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                                                </button>
                                                                <h4 class="modal-title custom_align" id="Heading">Add New Product</h4>
                                                            </div>
                                                            <form action='/vendor/edit-product' METHOD='post' encType="multipart/form-data">
                                                                <input type="hidden" name="_id" value="{{this._id}}">
                                                                <div class="modal-body">
                                                                    <div class="form-group">
                                                                        <ul class="list-group">
                                                                            <li class="list-group-item">
                                                                                <label for='name'>Name</label>
                                                                                <input class="form-control" value="{{this.name}}" name='name' type="text" placeholder="">
                                                                            </li>
                                                                        </ul>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <ul class="list-group">
                                                                            <li class="list-group-item">
                                                                                <label for='title'>SKU/Code</label>
                                                                                <input class="form-control" name='code' value="{{this.code}}" type="text" placeholder="">
                                                                            </li>
                                                                            <li class="list-group-item">
                                                                                <label for='title'>Title</label>
                                                                                <input class="form-control" value="{{this.title}}" name='title' type="text" placeholder="">
                                                                            </li>
                                                                            <li class="list-group-item">
                                                                                <label for='price'>Price</label>
                                                                                <input class="form-control" value="{{this.price}}" name='price' type="text" placeholder="">
                                                                            </li>
                                                                            <li class="list-group-item">
                                                                                <label for='shippable'>Shippable?</label>
                                                                                <div class="material-switch pull-right">
                                                                                    No
                                                                                    <input id="shippable" name="shippable" type="checkbox" />
                                                                                    <label for="shippable" class="label-success"></label> Yes
                                                                                </div>
                                                                            </li>
                                                                            <li class="list-group-item">
                                                                                <label for='taxable'>Taxable?</label>
                                                                                <div class="material-switch pull-right">
                                                                                    No
                                                                                    <input id="taxable" name="taxable" type="checkbox" />
                                                                                    <label for="taxable" class="label-success"></label> Yes
                                                                                </div>
                                                                            </li>
                                                                            <li class="list-group-item">
                                                                                <label for='description'>Description</label>
                                                                                <textarea rows="2" class="form-control" name='description' placeholder="">{{this.description}}</textarea>
                                                                            </li>
                                                                            <li class="list-group-item">
                                                                                <label for='category'>Category</label>
                                                                                <select class='form-control' name='category'>
                                                                                    {{#each ../allcats}}
                                                                                    <option value="{{this.name}}">{{this.slug}}</option>
                                                                                    {{/each}}
                                                                                </select>
                                                                            </li>
                                                                            <li class="list-group-item">
                                                                                <label for='Product_Group'>Product Type</label>
                                                                                <select class='form-control' name='Product_Group'>
                                                                                    {{!--
                                                                                    <option value="TICKET" {{#if this.new}}selected{{/if}}>Ticket</option>
                                                                                    <option value="DONATION" {{#if this.isDonation}}selected{{/if}}>Variable Amount Donation</option> --}}
                                                                                    <option value="APPAREL" {{#if this.isApparel}}selected{{/if}}>Featured</option>
                                                                                    <option value="SIMPLE">Non Featured</option>
                                                                                </select>
                                                                            </li>
                                                                        </ul>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <ul class="list-group">
                                                                            <li class="list-group-item">
                                                                                <label for='imageFile'>Image</label>
                                                                                <input type='file' name='imageFile' class='form-control'>
                                                                            </li>
                                                                        </ul>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" onClick="submit();" data-dismiss="modal" class="btn btn-warning btn-lg" style="width: 100%;">
                                                                        <span class="glyphicon glyphicon-pencil"></span> Update</button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                        <!-- /.modal-content -->
                                                    </div>
                                                    <!-- /.modal-dialog -->
                                                </div>
                                            </td>
                                            <td width=5%>
                                                <form action='/admin/delete-product' method="POST">
                                                    <input type='hidden' name='_id' value='{{this._id}}'>
                                                    <p data-placement="top" data-toggle="tooltip" title="Delete">
                                                        <button class="btn btn-danger btn-xs" onClick="submit();">
                                                            <span class="glyphicon glyphicon-trash"></span>
                                                        </button>
                                                    </p>
                                                </form>
                                            </td>
                                            <td width=5%>
                                                <p data-placement="top" class='text-left' data-toggle="tooltip" title="View Product ">
                                                    <button class="ui right floated btn btn-warning btn-xs" data-title="view" data-toggle="modal" data-target="#view_{{this._id}}">
                                                        <span class="glyphicon glyphicon-eye-open"></span>
                                                    </button>
                                                </p>
                                                <div class="modal fade" id="view_{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="add" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                                                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                                                </button>
                                                                <h4 class="modal-title custom_align" id="Heading">View Product</h4>
                                                            </div>
                                                            <div class="pre">
                                                                <pre><code class="prettyPrint">{{JSON this}}</code></pre>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" onClick="submit();" data-dismiss="modal" class="btn btn-warning btn-xs" style="width: 100%;">
                                                                    <span class="glyphicon glyphicon-remove"></span>Close</button>
                                                            </div>
                                                            </form>
                                                        </div>
                                                        <!-- /.modal-content -->
                                                    </div>
                                                    <!-- /.modal-dialog -->
                                                </div>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->
</div>

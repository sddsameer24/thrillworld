<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Thrillworld">
    <title>Shop | {{title}} </title>
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/font-awesome.min.css" rel="stylesheet">
    <link href="/stylesheets/prettyPhoto.css" rel="stylesheet">
    <link href="/stylesheets/animate.css" rel="stylesheet">
    <link href="{{themeurl}}" rel="stylesheet">
    <link href="/stylesheets/responsive.css" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
    <link rel="shortcut icon" href="images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="images/ico/apple-touch-icon-57-precomposed.png">
</head>
<!--/head-->
<!--layouts: facet.hbs-->

<body>
    {{>eshop/header}}
    <section>
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
                    {{#if successMsg}}
                    <div id="success" class="alert alert-success {{#if noMessage}}hidden{{/if}}" >
                        {{successMsg}}
                    </div>
                    {{/if}}
                    {{#if errorMsg}}
                    <div id="danger" class="alert alert-danger {{#if noErrorMsg}}hidden{{/if}}">
                        {{errorMsg}}
                    </div>
                    {{/if}}
                </div>
            </div>
            <div class="row">
                {{{body}}}
            </div>
        </div>
    </section>

    {{>eshop/footer}}

    <script src="/javascripts/jquery.js"></script>
    <script src="/javascripts/price-range.js"></script>
    <script src="/javascripts/jquery.scrollUp.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/jquery.prettyPhoto.js"></script>
    <script src="/javascripts/main.js"></script>
</body>

</html>
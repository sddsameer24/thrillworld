                'global': false,
                'url': 'http://localhost:3000/api/products',
                'dataType': "json",
                'success': function (data) {
                    json = data;
                    ////console.log(json);
                    $.each(data, function (i, product) {
                        $('#product').append($('<option>').text(product.name).attr('value', product.sku));
                    });
                }
            });
        });
    </script>
<div class="container">
    <table id="cart" class="table table-hover table-condensed">
        <thead>
            <tr>
                <th style="width:50%">Event</th>
                <th style="width:10%">Price</th>
                <th style="width:8%">Attendees</th>
                <th style="width:22%" class="text-center">Subtotal</th>
                <th style="width:10%"></th>
            </tr>
        </thead>

        {{#each cart}} {{#each cart}}
        <tbody>
            <tr>
                <td data-th="Product">
                    <div class="row">
                        <div class="col-sm-2 hidden-xs">
                            <img src="{{this.imagePath}}" alt="..." class="img-responsive" />
                        </div>
                        <div class="col-sm-10">
                            <h4 class="nomargin">{{this.product_name}}</h4>

                        </div>
                    </div>
                </td>
                <td data-th="Price">{{this.product_price}}</td>
                <td data-th="Quantity">
                    {{this.product_qty}}
                </td>
                <td data-th="Subtotal" class="text-center">{{this.product_price}}</td>
                <td class="actions" data-th="">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row text-center">
                                <a href="#" class="btn btn btn-xs btn-success" data-toggle="modal" data-target="#basicModal">
                                    <span class="glyphicon glyphicon-refresh"></span>
                                </a>
                            </div>
                            <div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                            <h4 class="modal-title" id="myModalLabel">Basic Modal</h4>
                                        </div>
                                        <div class="modal-body">
                                            <form action='/update-carta' method="POST">
                                                <input type='hidden' name='_id' value='{{../this._id}}'>
                                                <p data-placement="top" data-toggle="tooltip" title="Delete">

                                                </p>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-primary">Save changes</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <form action='/delete-carta' method="POST">
                                <input type='hidden' name='_id' value='{{../this._id}}'>
                                <p data-placement="top" data-toggle="tooltip" title="Delete">
                                    <button class="btn btn-danger btn-xs" onClick="submit();">
                                        <span class="glyphicon glyphicon-trash"></span>
                                    </button>
                                </p>
                            </form>
                        </div>
                    </div>
                </td>
            </tr>
        </tbody>

        {{/each}}{{/each}}
        <tfoot>
            <tr class="visible-xs">
                <td class="text-center">
                    <strong>Total 1.99</strong>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="/shop" class="btn btn-warning">
                        <i class="fa fa-angle-left"></i> Add more events</a>
                </td>
                <td colspan="2" class="hidden-xs"></td>
                <td class="hidden-xs text-center">
                    <strong>Total 1.99</strong>
                </td>
                <td>

                    <form action='/cartcreate' method='POST'>

                        {{#each cart}}

                        <input type="hidden" name="userid" value="{{this.user.id}}">
                        <input type="hidden" name="first_name" value="{{this.user.first_name}}">
                        <input type="hidden" name="last_name" value="{{this.user.last_name}}">
                        <input type="hidden" name="email" value="{{this.user.email}}">
                        <input type="hidden" name="telephone" value="{{this.user.telephone}}"> {{/each}}
                        <input type="hidden" name="length" value="{{this.length}}">
                        <input type="hidden" name="cart" value="{{this.carts}}">
                        <input type='submit' value='Pay Now' class="btn btn-primary add-to-cart" role="button">
                    </form>
                    <form action='/cartcreate' method='POST'>
                        {{#each cart}}
                        <input type="hidden" name="userid" value="{{this.user.id}}">
                        <input type="hidden" name="first_name" value="{{this.user.first_name}}">
                        <input type="hidden" name="last_name" value="{{this.user.last_name}}">
                        <input type="hidden" name="email" value="{{this.user.email}}">
                        <input type="hidden" name="telephone" value="{{this.user.telephone}}">
                        <input type="hidden" name="cart" value="{{this.cart}}"> {{/each}}
                        <input type='submit' value='Pay On Arrival' class="btn btn-primary add-to-cart" role="button">
                    </form>

                </td>

            </tr>
        </tfoot>
    </table>
</div>
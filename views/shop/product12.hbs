<!-- shop/product.hbs -->
<div class="row product-information">
    {{#each product}}

    <div class="col-md-5">
        
            

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
      <div class="item active">
      <img src="{{this.imagePath}}" alt="Los Angeles">
    </div>
    <div class="item active">
      <img src="{{this.imagePathg1}}" alt="Los Angeles">
    </div>

    <div class="item">
      <img src="{{this.imagePathg2}}" alt="Chicago">
    </div>

    <div class="item">
      <img src="{{this.imagePathg3}}" alt="New York">
    </div>
    </div>
    <div class="col-md-7">
        <div class="product-information">
            <div class="caption-full">
                <h4 class="pull-right">Rs{{money this.price}}</h4>
                <h4>
                    <a href="#">{{this.name}}</a>
                </h4>
            </div>
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active">
                    <a href="#description" aria-controls="description" role="tab" data-toggle="tab">Description</a>
                </li>
                <li role="presentation">
                    <a href="#features" aria-controls="features" role="tab" data-toggle="tab">Features</a>
                </li>
                <li role="presentation">
                    <a href="#reviews" aria-controls="reviews" role="tab" data-toggle="tab">Reviews</a>
                </li>
            </ul>
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="description">
                    <div class="product-tab-area">
                        <div class='description'>
                            {{this.description}}
                        </div>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane top-10" id="features">
                    <div class="product-tab-area">
                        <div class="features">
                            <ul>
                                {{#if parking}}
                                <p>Parking</p>
                                <li>
                                    <i class="fa fa-car" aria-hidden="true"></i>
                                </li>
                                {{/if}} {{#if Pool}}
                                <p>Pool</p>
                                <li>
                                    <i class="fa fa-car" aria-hidden="true"></i>
                                </li>
                                {{/if}} {{#if campfire}}
                                <p>Campfire</p>
                                <li>
                                    <i class="fa fa-free-code-camp" aria-hidden="true"></i>
                                </li>
                                {{/if}} {{#if Wifi}}
                                <p>Wifi</p>
                                <li>
                                    <i class="fa fa-wifi" aria-hidden="true"></i>
                                </li>
                                {{/if}}
                            </ul>
                        </div>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane" id="reviews">
                    <div class="blog-comment">
                        <h3 class="text-success">Reviews</h3>
                        <hr/>
                        <ul class="comments">
                            {{#each comment}}
                            <h5>user:{{user.first_name}}</h5>
                            <h5>comment:{{product.comment}}</h5>
                            {{/each}}
                        </ul>
                    
                         
                        <form action='/reviews' method='POST'>
                            <h3>Share your experience </h3>
                            <input name="review" value="comment here">
                            <input  name='first_name' value='{{this.first_name}}'>
                            <input type="hidden" name='productId' value='{{ this._id }}'>
                            <input type='submit' value='Submit' class="btn btn-success add-to-cart" role="button">
                        </form>
                      
                        
                      

                    </div>
                </div>
            </div>
            <p>
                <div class="row">
                    <form action='/add-to-cart' method='POST'>
                        <input type='hidden' id='id' name='productId' value='{{ product._id }}'>
                        <input type='hidden' id='type' name='type' value='{{product.Product_Group}}'>
                        <p class="text-center">
                            <input type='submit' value='Add to Cart' class="btn btn-success add-to-cart" role="button">
                        </p>
                    </form>
                </div>
        </div>
    </div>
    {{/each}}
    <br>
    <br>
    <br>

    <div class="productrecommendations">
        <div class="col-md-3">
            <div class="panel-heading">
                <h3>Also Viewed</h3>
            </div>
            <div class="panel-body">
                {{#each recommendations.viewed.results}}
                <div class='small-thumbnail'>
                    <a href='/product/{{this._id}}'>
                        <img src="{{this.image}}"> {{this.title}}
                    </a>
                </div>
                {{/each}}
            </div>
            <p data-placement="top" data-toggle="tooltip" title="View Popularity Query ">
                <button class="btn btn-warning btn-lg" data-title="Add" data-toggle="modal" data-target="#viewed">View Also Viewed Query

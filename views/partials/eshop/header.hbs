	<!--start-header-->
	<div class="header-strip w3l">
		<div>
			<p class="phonenum">
				<span class="glyphicon glyphicon-earphone" aria-hidden="true"></span> &nbsp; CALL - US: &nbsp;(+91) 838 100 4848
			</p>
			<p class="phonenum two">
				<span class="glyphicon glyphicon-home" aria-hidden="true"></span> &nbsp;info@thrillworld.com</p>
			<div>

				<div class="pull-right">
					<ul class="nav navbar-nav">
						<li>
							{{#if login}}
							<div class="dropdown">
								<button class="dropbtn">
									<i class="fa fa-user"></i>
									<a>{{user.first_name}} {{user.last_name}}</a>
								</button>
								<div class="dropdown-content">
									<a href="/user/profile">User Profile</a>
									<a href="/user/orders">Bookings</a>

								</div>
							</div>
							{{/if}}
						</li>
{{#if login}}
						<li>
							<a href="/shopping-cart">
								<i class="fa fa-heart"> Wishlist</i>
								{{#if user.product}}
								<span class="badge btn-success">{{ user.product.length }}</span>
								{{/if}}</a>
						</li>
						{{/if}}
						{{#if login}}
						<li>
							<a href="/user/logout">
								<i class="fa fa-lock"></i> Logout</a>
						</li>
						{{else}}
						<li>
							<button type="button" href="/user/signin" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Login</button>

							<!-- Modal -->
							<div class="modal fade" id="myModal" role="dialog">
								<div class="modal-dialog">

									<!-- Modal content-->
									<div class="modal-content">
										<div class="modal-header">
											<button type="button" class="close" data-dismiss="modal">&times;</button>
											<h4 class="modal-title">Login</h4>
										</div>
										<div class="container-fluid">
											<div class="row top-buffer-20">
												<div class="col-md-8 col-md-offset-2">
													<div class="panel panel-default">
														<div class="panel-heading">
															<strong>Login</strong>
														</div>
														<div class="panel-body">
															<div class="row">
																<!-- Email Login -->
																<div class="col-sm-6 col-md-6">
																	<section id="accountActionForm" class="top-buffer-20 bottom-buffer-20">
																		<form class="form-horizontal" role="form" method="post" action="/user/signin">
																			<input type="hidden" name="_csrf" value="{{ csrfToken }}">
																			<div class="form-group">
																				<label for="email" class="col-sm-3 control-label">Email </label>
																				<div class="col-sm-9">
																					<input type="email" class="form-control" name="email" placeholder="Email" required="">
																				</div>
																			</div>
																			<div class="form-group">
																				<label for="password" class="col-sm-3 control-label">Password </label>
																				<div class="col-sm-9">
																					<input type="password" class="form-control" name="password" placeholder="Password" required="">
																				</div>
																			</div>
																			<div class="form-group">
																				<div class="col-sm-offset-3 col-sm-9">
																					{{!--
																					<div class="checkbox">
																						<label class="">
																							<input type="checkbox" class="" name="inputRemember" checked="checked">Remember me
																						</label>
																					</div>--}}
																				</div>
																			</div>
																			<div class="form-group last">
																				<div class="col-sm-offset-3 col-sm-9">
																					<button type="submit" class="btn btn-success">Login</button>&nbsp;
																					<p class="pull-right">Forgot?
																						<a type="button" class="btn btn-default" href="/user/forgot">Reset</a>
																					</p>
																				</div>

																			</div>
																		</form>

																	</section>
																</div>
																<!-- Social Login -->
																<div class="col-sm-5 col-sm-offset-1 col-md-5 col-md-offset-1 top-buffer-20">
																	<a class="btn btn-block btn-social btn-google-plus" href="/user/google">
																		<i class="fa fa-google-plus"></i> Sign in with Google
																	</a>
																	<div class="hr">
																		<div class="inner">
																			<p class="text-info" align="center">or</div>
																	</div>

																	<a class="btn btn-block btn-social btn-facebook" href="/user/facebook">
																		<i class="fa fa-facebook"></i> Sign in with Facebook
																	</a>
																	<p class="text-info top-buffer-10" align="center">
																		<i class="fa fa-info-circle"></i>&nbsp;We will never post on your walls.</p>
																</div>
																<br>
															</div>
															<div class="col-sm-12">
																<hr>
																<p class="text" align="center">
																	<p class="text-info top-buffer-5" align="center">Need an account?
																		<a href="/user/signup" type="button" class="btn btn-info">Sign Up</a>
																	</p>
																</p>
															</div>
														</div>
														<div class="panel-footer" align="center"></div>
													</div>

												</div>
											</div>
										</div>

									</div>

								</div>
							</div>
						</li>
						{{/if}}
					</ul>
				</div>

			</div>



			<div class="clearfix"></div>
		</div>
	</div>


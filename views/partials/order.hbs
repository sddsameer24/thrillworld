<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> Transactions Panel</h3>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>SKU</th>
                                    <th>TITLE</th>
                                    <th>PRICE</th>
                                    <th>ACTION</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each orders}}
                                <tr class="accordion-toggle" data-toggle="collapse" data-target="#{{orders.id}}">
                                    <td>{{orders.id}}</td>
                                    <td>{{orders.created}}</td>
                                    <td>{{orders.status}}</td>
                                    <td>{{orders.cart.totalPrice}}</td>
                                </tr>
                                    <tr>
                                      <td class="accordion-body collapse" id="${{id}}">
                                        <table class="table">
                                          <thead>
                                            <th>ITEM</th>
                                            <th>TYPE</th>
                                            <th>QTY</th>
                                            <th>PRICE</th>
                                            </thead>
                                          <tbody>
                                          {{#each cart.items}}
                                            <tr>
                                              <td>{{this.name}} - {{this.title}}</td>
                                              <td>{{this.type}}</td>
                                              <td>{{this.qty}}</td>
                                              <td>{{this.price}}</td>
                                            </tr>
                                            {{/each}}
                                          </tbody>
                                        </table>
                                      </td>
                                    </tr>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>